<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rec_8dp"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_title_dialog_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문 방법을 선택해주세요."
        android:textColor="@color/main_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_contents_dialog_order_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:text="@string/order_type_description"
        android:textColor="@color/main_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title_dialog_order_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_dialog_order_type" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_contents_dialog_order_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_contents_dialog_order_type">

        <TextView
            android:id="@+id/btn_dialog_order_type_visit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_rec_8dp"
            android:backgroundTint="@color/main_red"
            android:gravity="center"
            android:text="현장 수령하기"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_dialog_order_type_delivery"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_rec_8dp"
            android:backgroundTint="@color/main_red"
            android:gravity="center"
            android:text="배송 신청하기"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_dialog_order_type_close"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_rec_8dp"
            android:backgroundTint="@color/shape_background"
            android:gravity="center"
            android:text="닫기"
            android:textColor="@color/main_text"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>